#include <stdio.h>
#include <stdlib.h>

int sumarConPuntero(int num1, int num2, int* resultado);

int main(void)
{
	setbuf(stdout,NULL);

	int num1;
	int num2;
	int suma;

	printf("Ingrese num1: ");
	scanf("%d", &num1);

	printf("Ingrese num2: ");
	scanf("%d", &num2);

	sumarConPuntero(num1, num2, &suma);
	printf("El resultado es: %d", resultado);

	return EXIT_SUCCESS;
}

int sumarConPuntero(int num1, int num2, int* resultado)
{
	int retorno;

	*resultado = num1 + num2;

	return retorno;
}
