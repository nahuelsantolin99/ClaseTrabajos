#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	int i;
	int aux;
	for(i = 0; i < 10; i++)
	{
		printf("Ingrese un numero distinto a 0: ");
		scanf("%d", &aux);

		if(aux == 0)
		{
			break;
		}
	}
	return EXIT_SUCCESS;
}
