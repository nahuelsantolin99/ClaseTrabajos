#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	int i;
	int aux;
	for(i = 0; i < 10; i++)
	{
		if(aux != 0)
		{
			printf("Ingrese numero distinto de 0: ");
			scanf("%d", &aux);
		}
		else
		{
			break;
		}

	}
	return EXIT_SUCCESS;
}
