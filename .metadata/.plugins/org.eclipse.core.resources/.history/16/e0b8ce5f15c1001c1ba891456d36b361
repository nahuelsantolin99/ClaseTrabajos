#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	int aux;
	int contadorPares = 0;
	int contadorImpares = 0;
	int minimo;
	int maximoPar;
	int acumuladorPositivos = 0;
	int acumuladorNegativos = 0;
	int productoNegativos;

	do{
		printf("Ingrese un numero distinto a 0: ");
		scanf("%d", &aux);

		if(aux % 2 == 0)
		{
			contadorPares = contadorPares + 1;
		}
		else
		{
			contadorImpares = contadorImpares + 1;
		}

	}while(aux != 0);

	printf("La cantidad de pares es %d y la cantidad de impares es %d", contadorPares, contadorImpares);

	return EXIT_SUCCESS;
}
